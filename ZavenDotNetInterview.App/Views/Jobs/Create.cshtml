@model ZavenDotNetInterview.Domain.Models.ViewModels.JobCreateDataViewModel
@{
    ViewBag.Title = "Create job";
}

<h2>Create job</h2>

<div class="container">
    <div class=" col-lg-8">
        <form id="jobForm" action="/Jobs/Create" method="post">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="form-group">
                <label for="Name">
                    Name:
                </label>
                <input class="form-control" type="text" name="Name" placeholder="Name" value="@Model.Name"/>
                <h5 id="nameVal" class="text-danger" />
            </div>
            <div class="form-group">
                <label for="DoAfter">
                    Do after:
                </label>
                <input class="form-control" type="datetime" name="DoAfter" placeholder="RRRR-MM-DD" value="@Model.DoAfterStr"/>
                <h5 id="doAfterVal" class="text-danger" />
            </div>            
            <input class="btn btn-success" id="sendForm" type="submit" value="Add Task" />
        </form>
    </div>
</div>
@section scripts{

    <script type="text/javascript" src="~/Scripts/createJobScript.js"></script>

}