@model List<ZavenDotNetInterview.App.Models.ViewModels.JobViewModel>

@{
    ViewBag.Title = "Jobs view";
}

<h2>Jobs</h2>
<div class="container">
    <div class="col-lg-offset-10 col-lg-2">
        @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-primary" })
        @Html.ActionLink("Process", "Process", null, new { @class = "btn btn-danger" })
    </div>
    <div class="col-lg-12" style="margin-top:5px; margin-bottom:5px;"></div>
    <div class="col-lg-12">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Name")
                </th>
                <th>
                    @Html.DisplayName("Status")
                </th>
                <th></th>
            </tr>

            @foreach (var job in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => job.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => job.Status)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { jobId = job.Id }, new { @class = "btn btn-xs btn-default" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>